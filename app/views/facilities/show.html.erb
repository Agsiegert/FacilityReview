
<article id="facility" class="facility">
    <header>
      <%= image_for(@facility) %>
      <h1><%= @facility.name %></h1>
    </header>

    <p>
      <%= @facility.tagline %>
    </p>

    <h3 class="no-rule">
      <%= number_to_phone(@facility.phone, area_code: true) %>
    </h3>

    <h3> Address:</h3>
    <p>
      <%= @facility.street %><br>
      <%= @facility.city %>,
      <%= @facility.state %><br>
      <%= @facility.zip %>
    </p>

    <h3>iTriage Facility ID:</h3>
    <p>
      <%= @facility.iTriage_id %>
    </p>
      <footer>
      <nav>
        <%= link_to "Back to All Facilities", facilities_path, class: 'button' %>
        <%= link_to 'Submit Review', "#", class: 'button' %>
    </nav>
  </footer>
</article>


